{
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },
  "extends": "eslint:all",
  "installedESLint": true,
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "no-mixed-operators": "off",
    "capitalized-comments": "off",
    "no-inline-comments": "off",
    "sort-keys": "off",
    "no-console": "off",
    "no-magic-numbers": [
      "error", {
        "ignoreArrayIndexes": true
      }
    ],
    "indent": [
      "error",
      2, {
        "SwitchCase": 1
      }
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "dot-location": [
      "error",
      "property"
    ],
    "one-var": [
      "error",
      "never"
    ]
  }
}
