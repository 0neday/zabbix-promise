{
    "env": {
        "node": true,
        "es6": true
    },
    "extends": "eslint:all",
    "installedESLint": true,
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "sort-keys": "off",
        "no-console": "off",
        "no-magic-numbers": [
            "error", {
                "ignoreArrayIndexes": true
            }
        ],
        "indent": [
            "error",
            2, {
                "SwitchCase": 1
            }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "dot-location": [
            "error",
            "property"
        ],
        "one-var": [
            "error",
            "never"
        ]
    }
}
